<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="#C4F1EFF4"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.GailConnectV3.AppWidgetContainer">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_top_corner"
        android:backgroundTint="@color/primary_dark"
        android:gravity="center"
        android:padding="8dp"
        android:text="Who's born today?"
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/widget_birthday_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/data_update_status_txt"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" >

    </ListView>

    <TextView
        android:id="@+id/birthday_empty_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/data_update_status_txt"
        android:background="@color/primary_light"
        android:gravity="center"
        android:text="Today there is no birthday."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/data_update_status_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:textSize="12sp"
        android:text="Data last updated on 20, April, 2019. 9:00am" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_gail_logo_transparent" />
</RelativeLayout>